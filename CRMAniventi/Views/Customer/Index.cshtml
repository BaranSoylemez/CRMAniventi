@using EntityLayer.Concrete
@model List<Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AniventiLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h2 class="bg bg-secondary">Müşteriler</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>MÜŞTERİ ADI</th>
        <th>ADRES</th>
        <th>İLETİŞİM</th>
        <th>VERGİ NO</th>
        <th></th>
    </tr>
    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.CustomerID</td>
                    <td>@item.CustomerName</td>
                    <td>@item.CustomerAddress</td>
                    <td>@item.CustomerContact</td>
                    <td>@item.CustomerTaxNo</td>
                    <td><a href="/Customer/DeleteCustomer/@item.CustomerID" class="nav-icon fas fa-trash"></a>&nbsp;&nbsp;&nbsp;<a href="/Customer/EditCustomer/@item.CustomerID" class="fas fa-pen"></a></td>
                </tr>
            }
</table>
<br />
<a href="/Customer/AddCustomer" class="btn btn-success">Yeni Müşteri Ekle</a>
